  <h1><strong>Books</strong></h1>
    <table>
    <thead>
      <tr>
       <th>Title</th>
       <th>Body</th>
       <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
    <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td>
         <a class="show"><%= link_to "Show" , book_path(book.id) %></a>
     </td>
     <td>
         <a clss="edit"><%= link_to "Edit" , edit_book_path(book.id) %></a>
     </td>
     <td>
         <a clss="destroy"><%= link_to "Destroy" , book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></a>
     </td>
    </tr>
    <% end %>
    </tbody>
    </table>

  <h2>New book</h2>
  <% if @book.errors.any? %>error
    <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>

  <form class="new book">
   <%= form_with model:@book, url: '/books', method: :post do |f| %>
   <div class="field">
    <%= f.label :book_title, "Title" %>
    <%= f.text_field :title %>
   </div>
   <div class="field">
    <%= f.label :book_body, "Body" %>
    <%=f.text_area :body %>
   </div>
   <div class="actions">
    <%=f.submit 'Create Book' %>
   </div>
   <% end %>
  </form>


