<body>
<h1>Editing Book</h1>
<% if @book.errors.any? %>error
  <ul>
  <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <% end %>
  </ul>
<% end %>

<%= form_with model:@book, url: book_path(@book.id), method: :patch do |f| %>
 <div class="field">
 <%=f.label :book_totle, "Title" %>
 <%=f.text_field :title %>
 </div>
 <div class="field">
 <%=f.label :book_body, "Body" %>
 <%=f.text_area :body %>
 </div>
 <div class="actions">
 <%=f.submit 'Update Book' %>
<% end %>
</div>

 <a class="show"><%= link_to "Show" , book_path(@book.id) %></a>
 |
 <a class="back"><%= link_to "Back" , books_path %></a>
</body>